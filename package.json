{
	"name": "svelte-phrase-chain",
	"version": "0.0.3-beta.11",
	"bin": {
		"svelte-phrase-chain": "dist/cli.js"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "svelte-kit sync && svelte-package && bun build:cli && bun build.ts && publint",
		"build:cli": "tsc --project tsconfig.cli.json",
		"build:test": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "bun run build.ts",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint . && prettier --check .",
		"test:e2e": "playwright test",
		"test": "bun test:e2e",
		"test:realworld": "bun test/test-realworld.ts",
		"format": "prettier --write .",
		"clean": "rm -rf dist && rm -rf build && rm -rf test-app"
	},
	"files": [
		"dist",
		"templates"
	],
	"sideEffects": [
		"**/*.css"
	],
	"type": "module",
	
	"peerDependencies": {
		"svelte": "^5.0.0",
		"vite": "^6.0.0"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@playwright/test": "^1.49.1",
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@types/node": "^22.14.0",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"publint": "^0.3.2",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0"
		
	},
	"keywords": [
		"svelte"
	],
	"dependencies": {
		"@sveltejs/adapter-static": "^3.0.8",
		"@types/bun": "^1.2.8",
		"zod": "^3.24.2",
		"commander": "^13.1.0"
	}
}